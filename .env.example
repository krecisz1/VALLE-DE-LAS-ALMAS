# Valle de las Almas - Environment Variables
# Copy this file to .env and fill in your values

# Application
VITE_APP_NAME="Valle de las Almas"
VITE_APP_DESCRIPTION="Memorial website to honor the memory of loved ones"
VITE_APP_URL="http://localhost:3000"

# API Configuration (if needed in the future)
# VITE_API_BASE_URL="https://api.valledealmas.com"
# VITE_API_KEY="your-api-key-here"

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
# VITE_GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# External Services (optional)
# VITE_CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
# VITE_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxx"

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_QR_ACCESS=true

# Development
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=false